<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            tools:ignore="ScrollViewSize">

            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
                android:layout_gravity="center">
            <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                    android:id="@+id/tvMemberName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stFarmerName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:textIsSelectable="false"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/tvShowMemberNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1025"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="30.0sp"
                        android:textColor="@color/primary_dark"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <TextView
                android:id="@+id/tvMemberNameShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Medium Text"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary_dark"
                android:textSize="25dp"
                    android:layout_gravity="center_horizontal"
                    android:maxLength="25"
                    tools:ignore="ObsoleteLayoutParam" />

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:maxLength="25"
                    android:text="OVER WEIGHT"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="25dp"
                    android:visibility="gone"
                    tools:ignore="ObsoleteLayoutParam" />

            </LinearLayout>

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvvGross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/tvGross"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/colorBlack" />


                    <TextView
                        android:id="@+id/tvGrossAccepted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="0.0"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/primary_dark"
                        android:textSize="30.0sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/etShowGrossTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="0.0"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:textColor="@color/primary_dark"
                        android:textSize="28dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvShowGrossTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="0.0"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/primary_dark"
                        android:textSize="30.0sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvStability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:maxLength="25"
                        android:text="UNSTABLE READING"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="18sp"
                        android:visibility="gone"
                        tools:ignore="ObsoleteLayoutParam" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/tvTareWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tareWeight"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_margin="2dp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_horizontal" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/editText3"
                        android:layout_gravity="right"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvWeighingTareWeigh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="30.0sp"
                        android:layout_margin="15dp"
                        android:textColor="@color/primary_dark"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tvTareAccepted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="15dp"
                        android:text="0.0"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/primary_dark"
                        android:textSize="30.0sp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp">

                    <TextView
                    android:id="@+id/tvvTotalKgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/netWeight"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tvNetWeightAccepted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="30.0sp"
                        android:textColor="@color/primary_dark"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        android:layout_marginTop="15dp" />

                    <TextView
                    android:id="@+id/tvShowTotalKgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.0"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="30.0sp"
                    android:layout_margin="15dp"
                    android:textColor="@color/primary_dark"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units Count"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_margin="2dp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvvcount" />
                <TextView
                    android:id="@+id/tvUnitsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="35.0sp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="HardcodedText" />
                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tvAccumWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvTotalkgs"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:layout_gravity="right"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvWeighingAccumWeigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textSize="35.0sp"
                    android:layout_margin="15dp"
                    android:textColor="@color/primary_dark"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lt_accept"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bAccept"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/bg_buttons"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/lt_nprint"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_next"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/bg_buttons"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      "
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_print"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_print"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/bg_buttons" />

                <Button
                    android:id="@+id/btn_reconnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/bg_buttons"
                    android:text="Reconnect"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>




</LinearLayout>