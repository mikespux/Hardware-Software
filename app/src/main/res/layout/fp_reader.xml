<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ToolbarPopupTheme">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/toolbar">

        <ListView
            android:id="@+id/in"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll">

        </ListView>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="256dp"
            android:layout_height="228dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_farmers" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In ID"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/EnrolID"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />


                <Button
                    android:id="@+id/button2"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/Verify"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

                <Button

                    android:id="@+id/button3"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/Identify"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/DeleteID"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/ClearID"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Host"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/EnrolHost"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />


                <Button
                    android:id="@+id/button7"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/CaptureHost"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/Match"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button16"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/getimage"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

                <Button
                    android:id="@+id/button17"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/getdata"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

            </LinearLayout>

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smart Card"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/WriteFPCard"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/ReadFPCard"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />


                <Button
                    android:id="@+id/button18"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="-6dp"
                    android:text="@string/FPCardMatch"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button13"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/CardSn"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/ReadDataCard"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/WriteDataCard"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button14"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/getdevsn"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/getbat"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />


                <Button
                    android:id="@+id/button19"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/getversion"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:theme="@style/AutoButton" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
