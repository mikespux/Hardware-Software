<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/app_bar"
            layout="@layout/toolbar" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/layoutVR"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnVarieties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Varieties"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/bg_buttons" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:id="@+id/textView2" />

        <Button
            android:id="@+id/btnGrades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grades"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/bg_buttons"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:id="@+id/textView3" />

        <Button
            android:id="@+id/btnPrices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prices"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/bg_buttons"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ListView
        android:id="@+id/lvUsers"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="#ff8db3e1"
        android:dividerHeight="2.0dip"
        android:choiceMode="singleChoice"
        android:layout_weight="2.4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:elevation="50dp"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:backgroundTintMode="src_over"
            android:queryBackground="@color/colorWhite"
            android:focusable="false"
            android:iconifiedByDefault="false"
            android:inputType="phone">
        </SearchView>


    </LinearLayout>
</LinearLayout>